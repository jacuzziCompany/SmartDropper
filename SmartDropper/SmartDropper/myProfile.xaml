<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDropper.myProfile"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="backGroundImage.png"></Image>
            <ImageButton Clicked = "backButton_clicked" Source="buttonBack.png" Margin="20, 50"></ImageButton>
            <Label Text="My profile" TextColor="#147E78" FontSize="40" Margin="20, 80" 
                   FontFamily="Comfortaa"
                   ></Label>

            <Label Text="Name:" TextColor="#147E78" FontSize="27" Margin="40,180" ></Label>
            <Label Text="Surname:" TextColor="#147E78" FontSize="27" Margin="40,225" ></Label>

            <Button 
                Clicked="exitButton_clicked"
                VerticalOptions="Center"
                Text="EXIT"
                Font="Large"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#147e78 "
                BorderColor="#147e78 "
                BorderWidth="3"
                HeightRequest="52"
                WidthRequest="360"
                Margin="25,580, 15, 50 "
                CornerRadius="15"
    
             ></Button>
            
            
               


            

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>